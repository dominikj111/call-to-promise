{
  "name": "call-to-promise",
  "version": "2.0.2",
  "description": "Promiser is simple callback wrapper library. It generate, store and create a promise for any callback and pass arguments as expected.",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/**/*Test.js && deno run ./tests/moduleBuild.denotest.mjs",
    "lint-fix": "prettier --config .prettierrc.js -w src && eslint src --fix",
    "lint": "goodparts src",
    "build": "webpack --config webpack.umd.js --mode production && webpack --config webpack.module.js --mode production",
    "build-types": "tsc",
    "update-dependencies": "sh script.update-dependencies.sh"
  },
  "keywords": [
    "promise",
    "callback",
    "wrapper",
    "promise-store",
    "callback-wrapper",
    "promiser",
    "callback-to-promise",
    "call-to-promise"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/domino2/call-to-promise.git"
  },
  "author": "domino2",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "chai": "^4.3.7",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.36.0",
    "goodparts": "^1.3.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "typescript": "^5.0.2",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1"
  }
}

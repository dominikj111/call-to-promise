{
  "name": "call-to-promise",
  "version": "2.0.0",
  "description": "Promiser is simple callback wrapper library. It generate, store and create a promise for any callback and pass arguments as expected.",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/**/*Test.js && jest && deno run ./tests/moduleBuild.denotest.js",
    "lint-fix": "prettier --config .prettierrc.js -w src && eslint src --fix",
    "lint": "goodparts src",
    "build": "webpack --config webpack.umd.js --mode production && webpack --config webpack.module.js --mode production",
    "build-types": "tsc"
  },
  "keywords": [
    "promise",
    "callback",
    "wrapper",
    "promise-store",
    "callback-wrapper",
    "promiser",
    "callback-to-promise",
    "call-to-promise"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/domino2/call-to-promise.git"
  },
  "author": "domino2",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.18.9",
    "babel-jest": "^28.1.3",
    "chai": "^4.3.6",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.20.0",
    "goodparts": "^1.3.0",
    "jest": "^28.1.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
